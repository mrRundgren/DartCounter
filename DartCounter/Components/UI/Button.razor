<button disabled="@Disabled" @onclick="OnClick" class="disabled:opacity-25 disabled:pointer-events-none transition-all flex-1 select-none px-8 py-4 text-sm uppercase font-bold border border-2 border-white @(Outlined ? "bg-transparent text-white active:bg-white/20" : "bg-white text-primary active:bg-white/80 active:border-white/80") rounded-full" type="button">@Text</button>

@code {
    [Parameter]
    public EventCallback<MouseEventArgs> OnClick { get; set; }

    [Parameter, EditorRequired]
    public string Text { get; set; } = null!;

    [Parameter]
    public bool Outlined { get; set; }

    [Parameter]
    public bool Disabled { get; set; }
}